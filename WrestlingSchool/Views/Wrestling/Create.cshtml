@model Models.WrestlingModel
@{
    string Message = ViewBag.Message;
}
@if (!string.IsNullOrWhiteSpace(Message))
{
    <div class="col-md-3 alert alert-danger">
        <span> !اطلاعات شما به درستی ذخیره نشد</span>
        @Message
        <br />
    </div>
}

<div id="Image">
    <center>
<form action="\Wrestling\Create\" method="post" style="padding-top:50px"  asp-antiforgery="true">
    <h3 class="btn btn-danger">اطلاعات خود را وارد کنید</h3>
    <br />
    <div class="row col-md-12 ">
        <div class="form-group col-md-12">
            <label class="label" style="color:aliceblue">
                نام کشتی گیر
                <input type="text"  class="form-control btn-outline-secondary" name="@nameof(Model.FirstName)" value="@Model.FirstName" autocomplete="off"/>
            </label class="label">
        </div>
        <div class="form-group col-md-12">
            <label class="label" style="color:aliceblue">
                نام خانوادگی
                <input type="text" class="form-control  btn-outline-secondary" name="@nameof(Model.LastName)" value="@Model.LastName"  autocomplete="off" />
            </label>
        </div>
        <div class="form-group col-md-12">
            <label class="label" style="color:aliceblue">
                شماره تلفن
                <input type="tel" class="form-control  btn-outline-secondary"  name="@nameof(Model.PhoneNumber)" value="@Model.PhoneNumber" autocomplete="off" />
            </label>
        </div>
        <div class="form-group col-md-12">
            <label class="label" style="color:aliceblue">
                شهریه
                <input type="text" class="form-control  btn-outline-secondary" name="@nameof(Model.Tuition)" value="@Model.Tuition" autocomplete="off" />
            </label>
        </div>
        <div class="form-group col-md-12" >
            <label class="label" style="color:aliceblue; height:62px; width:206.8px">
                تاریخ تولد
                <input type="date" class="form-control  btn-outline-secondary" name="@nameof(Model.DateOfBirth)" value="@Model.DateOfBirth" autocomplete="off" />
            </label>
        </div>
        <div class="form-group col-md-12">
            <label class="label" style="color:aliceblue">
                کدملی
                <input type="text" class="form-control  btn-outline-secondary" name="@nameof(Model.NationalCode)" value="@Model.NationalCode" autocomplete="off" />
            </label>
        </div>
         <div class="form-group col-md-12">
           <button type="submit" class="btn btn-sm btn-primary" style="margin:28px" >ذخیره</button>
        </div>
    </div>
</form>
</center>
</div>